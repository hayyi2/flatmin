---
title: Modal
---
<div class="card">
    <div class="card-body">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            <span>Sample modal</span>
        </button>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModalForm">
            <span>Form modal</span>
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog max-w-sm">
                <div class="modal-content">
                    <div class="modal-body d-flex">
                        <div class="d-flex me-auto">
                            <div>
                                <div class="bg-danger w-11 h-11 me-4 d-flex rounded-pill align-items-center justify-content-center" style="--bs-bg-opacity: .1;">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-danger icon icon-tabler icon-tabler-alert-triangle" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M12 9v2m0 4v.01"></path>
                                        <path d="M5 19h14a2 2 0 0 0 1.84 -2.75l-7.1 -12.25a2 2 0 0 0 -3.5 0l-7.1 12.25a2 2 0 0 0 1.75 2.75"></path>
                                    </svg>
                                </div>
                            </div>
                            <div class="me-4">
                                <h5>Modal title</h5>
                                <p class="mb-0">Are you sure you want to deactivate your account?</p>
                            </div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default me-2" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-danger">Delete Data</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModalForm" tabindex="-1" aria-labelledby="exampleModalFormLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="d-flex">
                            <h5 class="mt-1 mb-4 me-auto">Modal title</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div>
                            <div class="mb-4 row">
                                <label class="col-3 col-form-label required">Email address</label>
                                <div class="col">
                                    <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                                </div>
                            </div>
                            <div class="mb-4 row">
                                <label class="col-3 col-form-label required">Password</label>
                                <div class="col">
                                    <input type="password" class="form-control" placeholder="Password">
                                </div>
                            </div>
                            <div class="mb-4 row">
                                <label class="col-3 col-form-label">Select</label>
                                <div class="col">
                                    <select class="form-select">
                                        <option>Option 1</option>
                                        <optgroup label="Optgroup 1">
                                            <option>Option 1</option>
                                            <option>Option 2</option>
                                        </optgroup>
                                        <option>Option 2</option>
                                        <optgroup label="Optgroup 2">
                                            <option>Option 1</option>
                                            <option>Option 2</option>
                                        </optgroup>
                                        <optgroup label="Optgroup 3">
                                            <option>Option 1</option>
                                            <option>Option 2</option>
                                        </optgroup>
                                        <option>Option 3</option>
                                        <option>Option 4</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <label class="col-3 col-form-label pt-0">Checkboxes</label>
                                <div class="col">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="check2Default">
                                        <label class="form-check-label" for="check2Default">Default checkbox</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="check2Checked" checked>
                                        <label class="form-check-label" for="check2Checked">Checked checkbox</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="check2Disabled" disabled>
                                        <label class="form-check-label" for="check2Disabled">Disabled checkbox</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default me-2" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>